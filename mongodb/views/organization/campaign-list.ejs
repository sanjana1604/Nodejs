<main>
    <% if (campaigns.length > 0) { %>
        <div class="grid">
            <% for (let campaign of campaigns) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 >
                            <%= campaign.organized_by %>
                        </h1>
                        <h2 >
                          <%=campaign.c_name%>
                        </h2>
                    </header>
                    <div class="card__content">
                      <h3>
                        <%= campaign.detail %>
                      </h3>
                      <p>
                      <h4>Start Date: 
                            <%= campaign.start_date %>
                        </h4>
                        
                        <h4>End Date: 
                          <%= campaign.end_date %>
                      </h4>
                        </p>
                    </div>
                </article>
                <% } %>
        </div>
        <% } else { %>
            <h1>No Products Found!</h1>
            <% } %>
